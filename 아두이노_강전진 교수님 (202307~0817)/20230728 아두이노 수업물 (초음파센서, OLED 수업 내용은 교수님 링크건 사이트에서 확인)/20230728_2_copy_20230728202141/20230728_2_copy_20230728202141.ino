int distance, duration;

void setup()
{
  // I2C 주소를 0x3C로 초기화
  display.begin(SSD1306_SWITCHCAPVCC, 0x3C);

  // 버퍼를 비우기
  display.clearDisplay();

  // 비트맵 이미지 표시
  display.drawBitmap(0, 0, mokoko, 128, 64, WHITE);   // 
  display.display();   // 화면에 출력
  delay(4000);   // 모코코 이미지 4초 동안 유지
  display.clearDisplay();   // 화면을 지운다?
  pinMode(TRIG, OUTPUT);
  pinMode(ECHO, INPUT);
}

// 거리 구하는공식
// 거리의 값 저장된 장소

void loop() {
  display.clearDisplay();   // 울트라소닉 폰트 출력
  display.setTextSize(1);
  display.setTextColor(WHITE);
  display.setCursor(0,0);
  display.println("Ultrasonic");
  //display.display();
  delay(100);


  long duration, distance;

  digitalWrite(TRIG, LOW);   // 거리 정보 출력
  delayMicroseconds(2);
  digitalWrite(TRIG, HIGH);
  delayMicroseconds(10);
  digitalWrite(TRIG, LOW);
  display.setCursor(0,16);

  duration = pulseIn (ECHO, HIGH);   // 물체에 반사되어 돌아온 초음파의 시간을 변수에 저장
  distance = duration * 17 / 1000;

  // display.println("Distance : ");
  display.setCursor(0, 16);
  display.println("distance : ");
  display.print(distance);
  display.print(" Cm");
  delay(100);

  display.setCursor(0,32);
  int arrow_count = map(distance, 0, 100, 0, 5);   // 거리를 0~100 범위에서 0-10 범위로 매핑
  for (int i = 0; i < arrow_count; i++) {
    display.print(">");
  }

  int value;
  value = distance / 5;

  display.display();   // 모니터에 출력해주는 소스코드
  delay(500);   // 일정 시간 동안 화면을 표시한 후 화면 지우기
  // display.clearDisplay();

}